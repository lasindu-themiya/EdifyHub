<!-- app/src/main/res/layout/item_studentviewteacher.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="18dp"
    android:layout_marginBottom="18dp"
    android:elevation="4dp"
    android:clipToOutline="true"
    android:background="@drawable/rounded_card_bg">

    <ImageView
        android:id="@+id/teacherProfileImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/baseline_person_24"
        android:background="@drawable/circle_background"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="88dp" />

    <TextView
        android:id="@+id/teacherName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Teacher Name"
        android:textSize="19sp"
        android:textColor="@color/primary"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/teacherSubject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:textSize="15sp"
        android:textColor="@color/accent"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/teacherName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/teacherInstitute"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Institute"
        android:textSize="14sp"
        android:textColor="@color/secondary"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/teacherSubject"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/teacherAbout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="13sp"
        android:textColor="@color/text_secondary"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/teacherInstitute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/btnViewInstitute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Institute"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/teacherAbout"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
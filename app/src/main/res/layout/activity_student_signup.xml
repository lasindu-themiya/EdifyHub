<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentsignuptitle"
        android:text="Student Sign Up"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_margin="20dp" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_below="@id/studentsignuptitle"
        android:background="#30ffffff"
        android:hint="Username"
        android:textColorHint="@color/cardview_dark_background"
        android:textColor="@color/cardview_dark_background"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:drawableLeft="@drawable/person"
        android:drawablePadding="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/age"
        android:layout_below="@id/username"
        android:background="#30ffffff"
        android:hint="Age"
        android:textColorHint="@color/cardview_dark_background"
        android:textColor="@color/cardview_dark_background"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:drawableLeft="@drawable/calendar"
        android:drawablePadding="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mobile"
        android:layout_below="@id/age"
        android:background="#30ffffff"
        android:hint="Mobile No"
        android:textColorHint="@color/cardview_dark_background"
        android:textColor="@color/cardview_dark_background"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:drawableLeft="@drawable/mobile"
        android:drawablePadding="15dp"
        android:inputType="phone"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stream"
        android:layout_below="@id/mobile"
        android:background="#30ffffff"
        android:hint="A/L Stream"
        android:textColorHint="@color/cardview_dark_background"
        android:textColor="@color/cardview_dark_background"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:drawableLeft="@drawable/learn"
        android:drawablePadding="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@id/stream"
        android:background="#30ffffff"
        android:hint="Email"
        android:textColorHint="@color/cardview_dark_background"
        android:textColor="@color/cardview_dark_background"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:drawableLeft="@drawable/mail"
        android:drawablePadding="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_below="@id/email"
        android:background="#30ffffff"
        android:hint="Password"
        android:textColorHint="@color/cardview_dark_background"
        android:textColor="@color/cardview_dark_background"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="15dp"
        android:inputType="textPassword"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/repassword"
        android:layout_below="@id/password"
        android:background="#30ffffff"
        android:hint="Re-Type Password"
        android:textColorHint="@color/cardview_dark_background"
        android:textColor="@color/cardview_dark_background"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/lock"
        android:inputType="textPassword"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signupbtn"
        android:text="Sign Up"
        android:layout_below="@id/repassword"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/primary"
        android:layout_margin="20dp"
        />

    <LinearLayout
        android:id="@+id/signInPromptContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/signupbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alreadyhave"
        android:text="Do you already have an account?"
        android:layout_below="@id/signupbtn"
        android:textColor="@color/cardview_dark_background"/>

        <TextView
            android:id="@+id/signInLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign In"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>
</RelativeLayout>
<!-- app/src/main/res/layout/fragment_student_create_discussion.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/surface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_margin="16dp"
        android:clipToPadding="false"
        android:clipChildren="false">

        <EditText
            android:id="@+id/etDiscussionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Discussion Name"
            android:background="@drawable/edittext_bg"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <Spinner
            android:id="@+id/spinnerSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etContext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Context"
            android:background="@drawable/edittext_bg"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:padding="12dp"
            android:textSize="16sp"
            android:minLines="3"
            android:layout_marginBottom="12dp"/>

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/imageview_bg"
            android:src="@drawable/baseline_image_24"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnUploadImage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Upload Image"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnTakePhoto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Take Photo"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnCreateDiscussion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Discussion"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
</ScrollView>
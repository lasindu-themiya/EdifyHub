<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="14dp"
    card_view:cardElevation="6dp"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    card_view:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp">

        <TextView
            android:id="@+id/quiz_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/primary"
            android:paddingBottom="2dp"/>

        <TextView
            android:id="@+id/quiz_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/secondary"
            android:paddingBottom="4dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/edittext_stroke"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/quiz_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawablePadding="6dp"
            android:paddingBottom="2dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/quiz_num_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:drawableLeft="@drawable/ic_question"
                android:drawablePadding="4dp"
                android:paddingEnd="16dp"/>

            <TextView
                android:id="@+id/quiz_num_answers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:drawableLeft="@drawable/ic_answer"
                android:drawablePadding="4dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/quiz_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/success"
            android:layout_marginTop="4dp"
            android:paddingEnd="8dp"/>

        <TextView
            android:id="@+id/quiz_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/accent"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/quiz_created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/quiz_scheduled_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/quiz_meeting_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="2dp"/>

        <!-- Meeting Link Section -->
        <LinearLayout
            android:id="@+id/layoutMeetingLinkSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvMeetingLinkLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meeting Link: "
                android:textStyle="bold"
                android:textColor="@color/primary" />

            <TextView
                android:id="@+id/tvMeetingLink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoLink="web"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnViewAttendees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Attendees"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnHostTeamsWeb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule Meeting"
                android:backgroundTint="@color/secondary"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>